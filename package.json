{
  "name": "winontop",
  "version": "0.5.0",
  "description": "Display websites in always-on-top transparent overlay windows",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:dir": "electron-builder --win --dir"
  },
  "keywords": [
    "overlay",
    "always-on-top",
    "transparent",
    "window",
    "webview"
  ],
  "author": "Abhishek Saxena",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/abhishekaxaan/winontop.git"
  },
  "build": {
    "appId": "com.abhishekaxaan.winontop",
    "productName": "WinOnTop",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "portable": {
      "artifactName": "WinOnTop Portable 0.5.0.exe",
      "splashImage": "resources/icon.png"
    },
    "files": [
      "**/*",
      "!**/*.ts",
      "!*.ps1",
      "!*.md",
      "!src/test_*.js",
      "!src/ui_test*.html",
      "!generate_icon.ps1",
      "!test_mock.js",
      "!.gitignore",
      "!.git"
    ]
  },
  "devDependencies": {
    "electron": "^40.2.1",
    "electron-builder": "^25.1.8",
    "png-to-ico": "^3.0.1"
  }
}